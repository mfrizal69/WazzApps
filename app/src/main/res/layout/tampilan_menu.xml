<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_weight="1"
            android:id="@+id/ivRs"
            android:onClick="clickRS"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/rs" />

        <ImageView
            android:layout_weight="1"
            android:id="@+id/ivPolisi"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/polisi" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_weight="1"
            android:id="@+id/ivMasjid"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/masjid" />

        <ImageView
            android:layout_weight="1"
            android:id="@+id/ivSekolah"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/sekolah" />
    </TableRow>
</LinearLayout>